<div>
    {{#with main}}
        <main>
            <section>
                {{>title data="All skills" big=true}}
                <ul>
                    {{#each skills}}
                        <li> 
                            {{name}} 
                            {{#if point includeZero=true}} ({{point}}) {{/if}}
                            {{#if isTop}} (TOP) {{/if}}

                            {{#unless point includeZero=true}} (do not study) {{/unless}}

                            {{#unless point}}
                                {{#if point includeZero=true}}
                                (still learning)
                                {{/if}}
                            {{/unless}}
                        </li>
                    {{/each}}
                </ul>

            </section>
            <section>
                {{>title data="My hobbies"}}
                <ul>
                    {{#each hobbies}}
                        <li> 
                            {{name}} 
                            {{#unless isMais includeZero=true}}  {{/unless}}
                            {{#unless isMais}}
                                {{#if isMain includeZero=true}}
                                (favorite)
                                {{/if}}
                            {{/unless}}
                        </li>
                    {{/each}}
                </ul>

            </section>
        </main>
    {{/with}}
</div>