{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
        <div>
            <h1>{{name}}</h1>
            <p>{{age}}, {{gender}}</p>
            <br>
            <div>
            <address>
            <em>{{address.street}} {{address.city}} {{address.state}} {{address.zip}} {{address.coutry}} </em>
            </address>
            </div>

        </div>
        <br>
        <hr>

        <div>
    
            <section>
                
                {{>title data="Educations:" big=true}}
                <ul>
                    {{#each education}}
                     {{degree}}{{major}}{{university}}{{graduationYear}}
                    {{/each}}
                    
                </ul>
            </section>
            <br>
            <hr>
              <section>
                {{>title data="WorkExperiences:" big=true}}
                <ul>
                    {{#each workExperience}}
                     
                        {{company}} {{title}} {{startDate}} {{endDate}} {{responsibilities}} {{year_founded}} {{industry}} 
                     {{/each}}
                     
                     <div>
                        {{> title data="Employees:" }}
                          <ul>
                          {{#each employees}}
                     
                        <li>{{name}} {{position}} {{department}}  </li>
                          {{/each}}
                        </ul>
                        {{> title data="Projects:" }}
                     
                     
                       
                     
                      <div>
                        {{> title data="Awesome Team:" }}
                        {{> title data="Team member:" }}
                       
                    
                          
                        
                     
                     
                     </div> 
                
                     </div>
                     
                     

                    
                     </div> 
                </ul>
            </section>
           
           
       
</div>

    {{/with}}
</div>

