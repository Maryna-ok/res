{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    <br>
    <div>
        <h1> {{make}} {{model}} </h1>
    </div>
    <hr>
    <section>
        <div>
            <h2>
                <p>{{description}}</p>
                <p>Color - {{color}} | Year - {{year}}</p>
            </h2>
        </div>
    </section>
    <section>
        {{#with features}}
        <div>
            <div>
                <h2>
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h3>Interior</h3>
                    </button>
                </h2>
                <div>
                    <div>
                        {{#with interior}}
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleOne" aria-expanded="false"
                                aria-controls="collapseExampleOne">
                                <b>Seats</b>
                            </button>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleTwo" aria-expanded="false"
                                aria-controls="collapseExampleTwo">
                                <b>Dashboard</b>
                            </button>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleThree" aria-expanded="false"
                                aria-controls="collapseExampleThree">
                                <b>Audio</b>
                            </button>
                        </p>
                        <div>
                            <div>
                                {{#with seats}}
                                <h5>Seats</h5>
                                <ul>
                                    <li><b>Material: </b>{{material}}</li>
                                    <li><b>Color: </b>{{color}}</li>
                                    <li><b>Heated: </b>{{heated}}</li>
                                    <li><b>Ventilated: </b>{{ventilated}}</li>
                                </ul>
                                {{/with}}
                            </div>
                        </div>
                        <div>
                            <div>
                                {{#with dashboard}}
                                <h5>Dashboard</h5>
                                <ul>
                                    <li><b>Material: </b>{{material}}</li>
                                    <li><b>Color: </b>{{color}}</li>
                                    <li><b>Display: </b>type: {{display.type}}, size:
                                        {{display.size}}, resolution: {{display.resolution}}, touchscreen:
                                        {{display.touchscreen}}</li>
                                </ul>
                                {{/with}}
                            </div>
                        </div>
                        <div>
                            <div>
                                {{#with audio}}
                                <h5>Audio</h5>
                                <ul>
                                    <li><b>System: </b>{{system}}</li>
                                    <li><b>Speakers: </b>{{speakers}}</li>
                                    <li><b>Subwoofer: </b>{{subwoofer}}</li>
                                    <li><b>Bluetooth: </b>{{bluetooth}}</li>
                                    <li><b>USB: </b>{{USB}}</li>
                                </ul>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            <div>
                <h2>
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        <h3>Exterior</h3>
                    </button>
                </h2>
                <div>
                    <div>
                        {{#with exterior}}
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleOne" aria-expanded="false"
                                aria-controls="collapseExampleOne">
                                <b>Wheels</b>
                            </button>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleTwo" aria-expanded="false"
                                aria-controls="collapseExampleTwo">
                                <b>Headlights</b>
                            </button>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleThree" aria-expanded="false"
                                aria-controls="collapseExampleThree">
                                <b>Sunroof</b>
                            </button>
                        </p>
                        <div>
                            <div>
                                {{#with wheels}}
                                <h5>Wheels</h5>
                                <ul>
                                    <li><b>Size: </b>{{size}}</li>
                                    <li><b>Type: </b>{{type}}</li>
                                    <li><b>Color: </b>{{color}}</li>
                                </ul>
                                {{/with}}
                            </div>
                        </div>
                        <div>
                            <div>
                                {{#with headlights}}
                                <h5>Headlights</h5>
                                <ul>
                                    <li><b>Type: </b>{{type}}</li>
                                    <li><b>Brightness: </b>{{brightness}}</li>
                                    <li><b>Automatic: </b>{{automatic}}</li>
                                </ul>
                                {{/with}}
                            </div>
                        </div>
                        <div>
                            <div>
                                {{#with sunroof}}
                                <h5>Sunroof</h5>
                                <ul>
                                    <li><b>Type: </b>{{type}}</li>
                                    <li><b>Size: </b>{{size}}</li>
                                    <li><b>Automatic: </b>{{automatic}}</li>
                                </ul>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            <div>
                <h2>
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        <h3>Safety</h3>
                    </button>
                </h2>
                <div>
                    <div>
                        {{#with safety}}
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleOne" aria-expanded="false"
                                aria-controls="collapseExampleOne">
                                <b>Airbags</b>
                            </button>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseExampleTwo" aria-expanded="false"
                                aria-controls="collapseExampleTwo">
                                <b>Assistance</b>
                            </button>
                        </p>
                        <div>
                            <div>
                                {{#with airbags}}
                                <h6> Front {{front}}</h6>
                                <h6> Side {{side}}</h6>
                                <h6> Knee {{knee}}</h6>
                                <h6> Rear {{rear}}</h6>
                                {{/with}}
                            </div>
                        </div>
                        <div>
                            <div>
                                {{#with assistance}}
                                <h6> Blind spot monitoring {{blind_spot_monitoring}}</h6>
                                <h6> Rear cross traffic alert {{rear_cross_traffic_alert}}</h6>
                                <h6> Lane departure warning {{lane_departure_warning}}</h6>
                                <h6> Adaptive cruise control {{adaptive_cruise_control}}</h6>
                                <h6> Collision warning {{collision_warning}}</span>
                                </h6>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <br>
    <hr>
    <br>
    <section>
        <p>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#ollapseExampleOne"
                aria-expanded="false" aria-controls="ollapseExampleOne">
                <b>Engine</b>
            </button>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#ollapseExampleTwo"
                aria-expanded="false" aria-controls="ollapseExampleTwo">
                <b>Fuel economy</b>
            </button>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                data-bs-target="#ollapseExampleThree" aria-expanded="false" aria-controls="ollapseExampleThree">
                <b>Price</b>
            </button>
        </p>
        <div>
            <div>
                {{#with engine}}
                <h5>Engine</h5>
                <ul>
                    <li><b>Type: </b>{{type}}</li>
                    <li><b>Displacement: </b>{{displacement}}</li>
                    <li><b>Horsepower: </b>{{horsepower}}</li>
                    <li><b>Torque: </b>{{torque}}</li>
                    <li><b>Transmission: </b>type: {{transmission.type}}, gears:
                        {{transmission.gears}}</li>
                </ul>
                {{/with}}
            </div>
        </div>
        <div>
            <div>
                {{#with fuel_economy}}
                <h5>Fuel economy</h5>
                <ul>
                    <li><b>City: </b>{{city}}</li>
                    <li><b>Highway: </b>{{highway}}</li>
                    <li><b>Combined: </b>{{combined}}</li>
                </ul>
                {{/with}}
            </div>
        </div>
        <div>
            <div>
                {{#with price}}
                <h5>Price</h5>
                <ul>
                    <li><b>Base: </b>{{base}}</li>
                    <li><b>Destination: </b>{{destination}}</li>
                    <li><b>Options: </b>Options: navigation - {{price.navigation}}, moonroof -
                        {{price.moonroof}}, premium paint - {{price.premium_paint}}</li>
                </ul>
                {{/with}}
            </div>
        </div>
        <br>
        <hr>
        <br>
        <h2>Total price {{price.total}}</h2>
    </section>
</main>
