{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
   
        <div>
            <h1>{{name}} </h1>
            <p>
                birthdate: March 14, 1879, <br>
                birthplace: Ulm, Kingdom of Württemberg, German Empire,<br>
                deathdate: April 18, 1955,<br>
                deathplace: Princeton, New Jersey, United States,<br>
                nationality: Swiss, German, American,<br>
                occupation: Theoretical Physicist, 
            </p>
              {{>title data="Known for:"}}
            <ul>
                {{#each known_for}}
                <li>{{this}} </li>
                {{/each}}
            </ul>
             {{>title data="Education:" }}
            <ul>
                {{#each education}}
                {{degree}} {{field}} {{institution}} {{year}} 
                {{/each}}
            </ul>
            </ul>
             {{>title data="Notable publications:" }}
            <ul>
                {{#each notable_publications}}
                <li>{{title}} {{year}} {{publisher}}</li>
                {{/each}}
            </ul>
            {{>title data="Partners:" }}
            <ul>
                {{#each partners}}
                <li>{{name}} {{relationship}} {{years}}</li>
                {{/each}}
            </ul>
             {{>title data="Awards:" }}
            <ul>
                {{#each awards}}
                {{title}} {{year}} {{description}} 
                {{/each}}
            </ul>
            {{>title data="Influences:"}}
            <ul>
                {{#each influences}}
                <li>{{this}} </li>
                {{/each}}
            </ul>
            {{>title data="Influenced:"}}
            <ul>
                {{#each influenced}}
                <li>{{this}} </li>
                {{/each}}
            </ul>
             {{>title data="Quotes:"}}
            <ul>
                {{#each quotes}}
                <li>{{this}} </li>
                {{/each}}
            </ul>
             {{>title data="Major discoveries:" }}
            <ul>
                {{#each major_discoveries}}
                {{title}}, {{year}}, {{description}}
                {{/each}}
            </ul>
            {{>title data="Contributions:" }}
            <p>
               title: Inventions, <br>
               description: Leonardo designed and invented a wide variety of machines and devices, including a helicopter, a diving suit, and a self-propelled cart. Many of his inventions were centuries ahead of their time.,<br>
               year: Late 15th to early 16th century, <br>
               field: Invention
            </p>
           
        </div>
   

</div>

